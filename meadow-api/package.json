{
  "name": "@meadow/api",
  "module": "src/index.ts",
  "version": "1.0.0",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/src/hc.js",
        "types": "./dist/src/hc.d.ts"
      }
    }
  },
  "scripts": {
    "dev": "bun run --hot ./src/index.ts",
    "dev:tsc": "tsc -p tsconfig.build.json --watch",
    "build": "tsc -p tsconfig.build.json",
    "db:push": "bunx drizzle-kit push",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit generate && bunx drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.0",
    "@scalar/hono-api-reference": "^0.9.13",
    "better-auth": "^1.3.6",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.2",
    "hono-pino": "^0.10.2",
    "pino": "^9.9.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@libsql/client": "^0.15.11",
    "@types/bun": "latest",
    "bun-types": "^1.2.20",
    "drizzle-kit": "^0.31.4",
    "pino-pretty": "^13.1.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
