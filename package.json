{
  "name": "meadow",
  "private": true,
  "workspaces": [
    "meadow-api",
    "meadow-todo",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:todo": "turbo run dev --filter=@meadow/todo --filter=@meadow/ui",
    "//lint": "bun --filter '*' lint",
    "//format": "bun --filter '*' format",
    "clean": "bun ./scripts/clean.ts && rm bun.lock"
  },
  "devDependencies": {
    "turbo": "^2.5.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.13"
}